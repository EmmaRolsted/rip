<UserControl x:Class="BiavlerProjekt.BiAvlerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Bistade:" HorizontalAlignment="Left" Margin="55,40,0,0" VerticalAlignment="Top"/>
        <Label Content="Dato:" HorizontalAlignment="Left" Margin="55,71,0,0" VerticalAlignment="Top"/>
        <Label Content="Antal varroamider:" HorizontalAlignment="Left" Margin="55,102,0,0" VerticalAlignment="Top"/>
        <Label Content="Bemærkninger:" HorizontalAlignment="Left" Margin="55,128,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="209,40,0,0" TextWrapping="Wrap" Text="{Binding Bistade1}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="209,71,0,0" TextWrapping="Wrap" Text="{Binding Date1}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="209,102,0,0" TextWrapping="Wrap" Text="{Binding Count1}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="209,128,0,0" TextWrapping="Wrap" Text="{Binding Text1}" VerticalAlignment="Top" Width="120"/>

        <DataGrid Grid.Column="1" x:Name="Collection" HorizontalAlignment="Left" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bistande" Binding="{Binding Bistade}"/>
                <DataGridTextColumn Header="Dato" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Varromide tæller" Binding="{Binding Count}"/>
                <DataGridTextColumn Header="Bemærkninger" Binding="{Binding Text}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Add" x:Name="Add" HorizontalAlignment="Left" Margin="118,316,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</UserControl>
